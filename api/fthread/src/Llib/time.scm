;*---------------------------------------------------------------------*/
;*    The module                                                       */
;*---------------------------------------------------------------------*/
(module __ft_time
   
   (library pthread)

   (import __ft_types
	   __ft_%types
	   __ft_%scheduler)

   (export (current-time . s)
	   (time?::bool ::obj)
	   (time->seconds ::int)
	   (seconds->time ::int)))

;*---------------------------------------------------------------------*/
;*    current-time ...                                                 */
;*---------------------------------------------------------------------*/
(define (current-time . o)
   (%scheduler-time (%get-optional-scheduler 'current-time o)))

;*---------------------------------------------------------------------*/
;*    time? ...                                                        */
;*---------------------------------------------------------------------*/
(define (time? obj)
   (fixnum? obj))

;*---------------------------------------------------------------------*/
;*    time->seconds ...                                                */
;*---------------------------------------------------------------------*/
(define (time->seconds x)
   x)

;*---------------------------------------------------------------------*/
;*    seconds->time ...                                                */
;*---------------------------------------------------------------------*/
(define (seconds->time x)
   x)


   
