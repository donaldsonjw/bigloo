#!/bin/sh
#*=====================================================================*/
#*    serrano/prgm/project/bigloo/autoconf/checkmember                 */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Tue May 27 06:50:25 2008                          */
#*    Last change :  Fri Sep  4 19:18:30 2009 (serrano)                */
#*    Copyright   :  2008-09 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    Check a C structure member field                                 */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    flags                                                            */
#*---------------------------------------------------------------------*/
cflags=""

#*---------------------------------------------------------------------*/
#*    We parse the arguments                                           */
#*---------------------------------------------------------------------*/
while : ; do
  case $1 in
    "")
      break;;

    --cflags=*|-cflags=*)
      cflags="`echo $1 | sed 's/^[-a-z]*=//'`";;

    -*)
      echo "Unknown option \"$1\", ignored" >&2;;

    *)
      break;;
  esac
  shift
done

#*---------------------------------------------------------------------*/
#*    field parsing                                                    */
#*---------------------------------------------------------------------*/
member=$1
shift

type=`echo $member | awk  -F . '{print $1}'`

var=`echo $type | awk '{print $2}'`
if [ "$var " = " " ]; then
  var=$type
fi

exp=`echo $member | awk '{print $2}'`
if [ "$exp " = " " ]; then
  exp=$member
fi

#*---------------------------------------------------------------------*/
#*    Temp files                                                       */
#*---------------------------------------------------------------------*/
file=$TMP/actest$USER
aout=$TMP/Xactest$USER

#*---------------------------------------------------------------------*/
#*    Generate the C files                                             */
#*---------------------------------------------------------------------*/
echo "/* generated by checkmember */" > $file.c

while : ; do
  case $1 in
    "") break;;
    *) echo $1 >> $file.c;;
  esac
  shift
done

echo "int main( int argc, char *argv[] ) {" >> $file.c
echo "  $type $var;" >> $file.c
echo "  return sizeof( $exp );" >> $file.c
echo "}" >> $file.c

#*---------------------------------------------------------------------*/
#*    Compilation test                                                 */
#*---------------------------------------------------------------------*/
compile="$CC $cflags $file.c -o $aout >/dev/null"

if eval "$BUILDSH $compile"; then
   \rm -f $file.*
   rm -f $aout
   rm -f $aout*
   echo "yes"
   exit 0
else
   \rm -f $file.*
   echo "no"
fi



  

