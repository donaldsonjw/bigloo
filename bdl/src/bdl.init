;*---------------------------------------------------------------------*/
;*    The basename of the native bdl library name                      */
;*---------------------------------------------------------------------*/
(declare-library! 'bdl :basename "bigloobdl")

;*---------------------------------------------------------------------*/
;*    .bdl runtime command file                                        */
;*---------------------------------------------------------------------*/
(define (bdl-load-rc dir)
   (let ((f (make-file-name dir ".bdlrc")))
      (if (file-exists? f)
	  (begin
	     (loadq f)
	     #t)
	  #f)))

;*---------------------------------------------------------------------*/
;*    Runtime command file                                             */
;*---------------------------------------------------------------------*/
(if (not (bdl-load-rc "."))
    (if (not (bdl-load-rc (getenv "HOME")))
	(bdl-load-rc "/etc")))
