(module init_cigloo
   (import init_setrc
	   init_parse-args
	   engine_engine)
   (main   main))

;*---------------------------------------------------------------------*/
;*    main ...                                                         */
;*---------------------------------------------------------------------*/
(define (main argv)
   (if (not (member "-q" argv))
       (setup-default-values))
   (if (parse-args argv)
       (cigloo)
       -1))
   
