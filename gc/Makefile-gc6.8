boot-gc:
	$(MAKE) -C $(CUSTOMGC) $(BOOTLIBDIR)/libbigloogc-$(RELEASE).a CFLAGS="$(CFLAGS) $(CGCFLAGS) -DSILENT"
	$(MAKE) -C $(CUSTOMGC) $(BOOTLIBDIR)/libbigloogc$(LIBSUF)$(LIBQ)-$(RELEASE).$(SHAREDSUFFIX) CFLAGS="$(CFLAGS) $(CGCFLAGS) -DSILENT"

boot-gc_fth:
	if [ "$(GCTHREADSUPPORT) " = "yes " ]; then \
	   $(MAKE) -C $(CUSTOMGC)_fth $(BOOTLIBDIR)/libbigloogc_fth-$(RELEASE).a CFLAGS="$(CFLAGS) $(CGCFLAGS) $(CGCTHREADFLAGS) -DSILENT" LIBQ=_fth && \
           $(MAKE) -C $(CUSTOMGC)_fth $(BOOTLIBDIR)/libbigloogc_fth$(LIBSUF)$(LIBQ)-$(RELEASE).$(SHAREDSUFFIX) CFLAGS="$(CFLAGS) $(CGCFLAGS) $(CGCTHREADFLAGS) -DSILENT" LIBQ=_fth; \
	fi
