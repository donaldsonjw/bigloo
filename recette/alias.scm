;*---------------------------------------------------------------------*/
;*    Le module                                                        */
;*---------------------------------------------------------------------*/
(module alias
   (import  (main "main.scm")
	    (alias-aux "alias_aux.scm"))
   (include "test.sch")
   (export (test-alias)))

;*---------------------------------------------------------------------*/
;*    bar0 ...                                                         */
;*---------------------------------------------------------------------*/
(define (bar0 x)
   x)

;*---------------------------------------------------------------------*/
;*    Les alias                                                        */
;*---------------------------------------------------------------------*/
(define bar1 foo1)
(define bar2 foo2)
(define bar3 foo3)
(define bar4 bar0)

;*---------------------------------------------------------------------*/
;*    test-alias ...                                                   */
;*---------------------------------------------------------------------*/
(define (test-alias)
   (test-module "alias" "alias.scm")
   (test "unary" (foo1 1) (bar1 1))
   (test "arity -1" (foo2 1 2 3) (bar2 1 2 3))
   (test "arity -n" (foo3 1 2 3) (bar3 1 2 3))
   (test "local" (bar0 1) (bar4 1)))
  
